{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "NODE_ENV=development ts-node-dev --respawn --transpile-only -r tsconfig-paths/register ./src/index.ts --ignore-watch ../../client ../../admin",
    "e2e": "NODE_ENV=e2e ts-node-dev --respawn --transpile-only -r tsconfig-paths/register ./src/index.ts",
    "dev:debug": "ts-node-dev --transpile-only --respawn --inspect=4321  ./src/index.ts",
    "check-types": "tsc --noEmit",
    "build": "rimraf ./build && tsc && tsc-alias && npm run copy-assets",
    "copy-assets": "copyfiles --all --up 1 --exclude \"./**/*.{ts,tsx}\" \"./src/**/*\" ./build",
    "test": "NODE_ENV=test jest --setupFiles=dotenv/config --runInBand --detectOpenHandles",
    "test:watch": "NODE_ENV=test jest --setupFiles=dotenv/config --runInBand --watchAll --detectOpenHandles",
    "test:debug": "ndb npm run test --watchAll --no-cache --runInBand",
    "services:stop": "docker-compose down",
    "services:start": "docker-compose up -d mailcatcher mongodb",
    "agenda:start": "agendash --db=mongodb://localhost:27017/jobs?directConnection=true --port=3001",
    "agenda:scheduled:start": "agendash --db=mongodb://localhost:27017/scheduled_jobs?directConnection=true --port=3002",
    "start:local": "docker compose --env-file .env up api",
    "start:e2e": "docker compose  --env-file .env.e2e up api",
    "migrate": "ts-node-dev --transpile-only -r tsconfig-paths/register ./src/db/_migration/index",
    "migrate:test": "NODE_ENV=test ts-node-dev --transpile-only -r tsconfig-paths/register ./src/db/_migration/index",
    "generate-db-types": "kysely-codegen --url postgres://tribe:tribe@localhost:5432/tribe --camel-case --out-file ./src/db/types/generated.ts",
    "run": "node ./build/db/_migration/index.js up && node ./build/index.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/express": "^5.0.1",
    "@types/express-useragent": "^1.0.5",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/lodash": "^4.17.16",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.15.3",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.11.14",
    "@types/react": "^19.1.3",
    "@types/reflect-metadata": "^0.0.5",
    "@types/supertest": "^6.0.3",
    "copyfiles": "^2.4.1",
    "i": "^0.3.7",
    "jest": "^29.7.0",
    "kanel": "^3.13.0",
    "kanel-kysely": "^0.7.1",
    "npm": "^11.3.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.3.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.3"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.824.0",
    "@aws-sdk/client-ses": "^3.806.0",
    "@aws-sdk/client-sesv2": "^3.806.0",
    "@aws-sdk/s3-request-presigner": "^3.824.0",
    "@react-email/components": "^0.0.39",
    "bcryptjs": "^3.0.2",
    "bullmq": "^5.52.1",
    "compression": "^1.8.0",
    "cron-parser": "^5.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "express-useragent": "^1.0.15",
    "helmet": "^8.1.0",
    "i18next": "^25.0.2",
    "intl-pluralrules": "^2.0.1",
    "jsonwebtoken": "^9.0.2",
    "kysely": "^0.28.2",
    "kysely-codegen": "^0.18.3",
    "lodash": "^4.17.21",
    "next": "^15.0.0",
    "nodemailer": "^7.0.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "pg": "^8.15.6",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "redis": "^5.0.0",
    "reflect-metadata": "^0.2.2",
    "socket.io": "^4.8.1",
    "stripe": "^18.3.0",
    "supertest": "^7.1.0",
    "url-slug": "^4.0.1",
    "uuid": "^11.1.0",
    "zod": "^3.24.4",
    "commander": "^13.1.0",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.5",
    "morgan": "^1.10.0"
  },
  "overrides": {
    "kysely-codegen": {
      "kysely": "$kysely"
    }
  }
}
